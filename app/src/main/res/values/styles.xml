<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TvShopStatus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/bg_white_radius_2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/tv_small</item>
    </style>

    <style name="RlHomeRevenue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TvHomeRevenue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TvHomeRevenueBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TvHomeRevenueBlack.Small">
        <item name="android:textSize">@dimen/tv_small</item>
    </style>

    <style name="RlStroke">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_white_stroke_radius</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="EtStroke">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_hor</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/tv_Normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BigTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Big</item>
        <item name="android:textColor">@color/tv_name</item>
    </style>

    <style name="NormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tv_name</item>
    </style>

    <style name="RegularTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_Regular</item>
        <item name="android:textColor">@color/tv_name</item>
    </style>

    <style name="RlItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_item</item>
        <item name="android:background">@drawable/bg_white_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TvItem" parent="RlItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/tv_name</item>
        <item name="android:textSize">@dimen/tv_Blod</item>
        <item name="android:drawableRight">@drawable/fragmentation_ic_right</item>
    </style>

    <style name="TvItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/tv_name</item>
        <item name="android:textSize">@dimen/tv_Blod</item>
    </style>

    <style name="TvItemHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/tv_hint</item>
        <item name="android:textSize">@dimen/tv_Normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtItemHint" parent="TvItemHint">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/tv_name</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="XYLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="TvEditGoods">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">@dimen/tv_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TvTips">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_tips</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="TvSpinner">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">@dimen/height_tips</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/bg_white_stroke_radius_5dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_down</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/tv_name</item>
        <item name="android:textSize">@dimen/tv_Blod</item>
    </style>

    <style name="EtPrinter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_tips</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/bg_white_stroke_radius_5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/tv_Blod</item>
    </style>






</resources>
