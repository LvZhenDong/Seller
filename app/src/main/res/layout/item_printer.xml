<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/margin_hor"
        android:paddingRight="@dimen/margin_hor">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备名称"
            android:textSize="@dimen/tv_light"
            android:textColor="@color/tv_name" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_hor"
            android:layout_toRightOf="@id/tv_name"
            android:gravity="center"
            android:text="设备设备"
            android:textSize="@dimen/tv_light"
            android:textColor="@color/tv_name" />

        <TextView
            android:id="@+id/tv_device_name_hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="易联云"
            android:textSize="@dimen/tv_light"
            android:textColor="@color/tv_hint" />
    </RelativeLayout>

    <View style="@style/XYLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/margin_hor"
        android:paddingRight="@dimen/margin_hor">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设备状态"
            android:textSize="@dimen/tv_light"
            android:textColor="@color/tv_name" />

        <TextView
            android:id="@+id/tv_device_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_hor"
            android:layout_toRightOf="@id/tv_status"
            android:gravity="center"
            android:textSize="@dimen/tv_light"
            android:text="58mm/1份"
            android:textColor="@color/tv_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/tv_light"
            android:background="@drawable/bg_btn_red_selector"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除设备"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>