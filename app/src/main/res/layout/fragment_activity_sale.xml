<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include layout="@layout/view_header_tv_tv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_start_time"
            style="@style/RlItem">

            <TextView
                style="@style/TvItemTitle"
                android:text="开始时间" />

            <TextView
                android:id="@+id/tv_start_time"
                style="@style/TvItem"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/drawable_padding_text"
                android:paddingRight="0dp" />

            <View
                style="@style/XYLine"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_end_time"
            style="@style/RlItem">

            <TextView
                style="@style/TvItemTitle"
                android:text="结束时间" />

            <TextView
                android:id="@+id/tv_end_time"
                style="@style/TvItem"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/drawable_padding_text"
                android:paddingRight="0dp"
                android:text="无限制" />

            <View
                style="@style/XYLine"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout style="@style/RlItem">

            <TextView
                android:id="@+id/et_reduce_hint"
                style="@style/TvItemTitle"
                android:text="活动名称" />

            <EditText
                android:id="@+id/et_reduce"
                android:layout_toRightOf="@id/et_reduce_hint"
                android:layout_marginLeft="10dp"
                style="@style/EtItemHint"
                android:hint="请输入活动名称" />

            <View
                style="@style/XYLine"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_green_selector"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white" />
</RelativeLayout>