<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tips"
        android:background="@color/bg_btn_tint_green"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/tv_name" />

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="删除"
            android:textColor="@color/tv_red" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_del"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="修改"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_spec_name"
        android:layout_width="wrap_content"
        style="@style/TvTips"
        android:text="规格名称：" />

    <View style="@style/XYLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tips">
        <TextView
            android:id="@+id/tv_spec_price"
            style="@style/TvTips"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="价格：" />

        <TextView
            android:id="@+id/tv_spec_inventory"
            android:layout_weight="1"
            android:gravity="center_vertical"
            style="@style/TvTips"
            android:text="库存：" />
    </LinearLayout>
    <View style="@style/XYLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tips">
        <TextView
            android:id="@+id/tv_box_count"
            style="@style/TvTips"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="餐盒数量：" />

        <TextView
            android:id="@+id/tv_box_price"
            android:layout_weight="1"
            android:gravity="center_vertical"
            style="@style/TvTips"
            android:text="餐盒价格：" />
    </LinearLayout>
    <View style="@style/XYLine" />
</LinearLayout>