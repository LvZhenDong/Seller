<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp"
    android:layout_marginLeft="@dimen/margin_hor_normal"
    android:layout_marginRight="@dimen/margin_hor_normal"
    android:layout_marginTop="2dp"
    android:background="@drawable/bg_white_radius_2dp"
    android:orientation="vertical"
    android:padding="7dp">

    <TextView
        android:id="@+id/tv_order_short_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#3343"
        android:textColor="@color/tv_name"
        android:textSize="@dimen/tv_Heva"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_short_num"
        android:text="20181231231231123"
        android:textColor="@color/tv_name"
        android:textSize="@dimen/tv_Normal" />

    <TextView
        android:id="@+id/tv_cancel_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_order_short_num"
        android:layout_alignParentRight="true"
        android:text="接单超时"
        android:textColor="@color/tv_red"
        android:textSize="@dimen/tv_Normal" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_order_num"
        android:layout_alignParentRight="true"
        android:text="已取消"
        android:textColor="@color/tv_red"
        android:textSize="@dimen/tv_Normal" />

    <View
        android:id="@+id/line1"
        style="@style/XYLine"
        android:layout_below="@id/tv_order_num" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1">

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="叼先生"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Regular" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_contact_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tv_contact_name"
            android:text="133209823423"
            android:textSize="@dimen/tv_light" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_name"
            android:text="通威国际中心"
            android:textSize="@dimen/tv_light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_phone" />
    </RelativeLayout>


    <View
        android:id="@+id/line2"
        style="@style/XYLine"
        android:layout_below="@id/rl2" />

    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Normal" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_time_hint"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_time_hint"
            android:text="2018-01-08 15:29:34"
            android:textSize="@dimen/tv_light" />

        <TextView
            android:id="@+id/tv_price_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_hint"
            android:text="订单金额"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Normal" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_price_hint"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_price_hint"
            android:text="Y21"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_light" />

        <TextView
            android:id="@+id/tv_type_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price_hint"
            android:text="订单类型"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Normal" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_type_hint"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_type_hint"
            android:text="外卖订单"
            android:textSize="@dimen/tv_light" />

        <TextView
            android:id="@+id/tv_content_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type_hint"
            android:text="订单备注"
            android:textColor="@color/tv_name"
            android:textSize="@dimen/tv_Normal" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_content_hint"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_content_hint"
            android:text="无"
            android:textSize="@dimen/tv_light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/fragmentation_ic_right" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_btn_red_selector"
            android:padding="5dp"
            android:text="取消订单"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_toLeftOf="@id/tv_cancel"
            android:background="@drawable/bg_btn_green_radius_5dp_selector"
            android:padding="5dp"
            android:text="打印小票"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_light" />
    </RelativeLayout>

</RelativeLayout>